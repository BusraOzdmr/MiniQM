@model IEnumerable<MiniQM.Admin.Models.CountryViewModel>

@{
    ViewBag.Title = "Ülkeler";
}

<h2>Ülkeler</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Ülke</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        
        <th>Eylemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detay", "Details", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
